#!/bin/sh

# Feed script a url or file location.
# If an image, it will view in nsxiv,
# if a video or gif, it will view in mpv
# if a music file or pdf, it will download,
# otherwise it opens link in browser.

# if [ -z "$1" ]; then
# 	url="$(xclip -o)"
# else
# 	url="$1"
# fi
#
# case "$url" in
# 	*mkv|*webm|*mp4|*youtube.com/watch*|*youtube.com/v/*|*youtube.com/playlist*|*youtube.com/shorts*|*youtu.be*|*hooktube.com*|*bitchute.com*|*videos.lukesmith.xyz*|*odysee.com*)
#
# 		notify-send "Opening $url with MPV" ; echo $url | xsel --input --clipboard; setsid -f mpv -quiet "$url" >/dev/null 2>&1 ;;
# 	*png|*jpg|*jpe|*jpeg|*gif|*webp)
# 		curl -sL "$url" > "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && nsxiv -a "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")"  >/dev/null 2>&1 & ;;
# 	*pdf|*cbz|*cbr)
# 		curl -sL "$url" > "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && zathura "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")"  >/dev/null 2>&1 & ;;
# 	*mp3|*flac|*opus|*mp3?source*)
# 		qndl "$url" 'curl -LO'  >/dev/null 2>&1 ;;
# 	*)
# 		[ -f "$url" ] && setsid -f "$TERMINAL" -e "$EDITOR" "$url" >/dev/null 2>&1 || setsid -f "$BROWSER" "$url" >/dev/null 2>&1
# esac

#!/bin/sh

if [ -z "$1" ]; then
	url="$(xclip -o)"
else
	url="$1"
fi

# Use a simple safe name for temp files by replacing slashes and special chars
safe_name=$(echo "$url" | sed 's/[^a-zA-Z0-9._-]/_/g')

case "$url" in
	*mkv|*webm|*mp4|*youtube.com/watch*|*youtube.com/v/*|*youtube.com/playlist*|*youtube.com/shorts*|*youtu.be*|*hooktube.com*|*bitchute.com*|*videos.lukesmith.xyz*|*odysee.com*)
		notify-send "Opening $url with MPV"
		echo "$url" | xsel --input --clipboard
		mpv -quiet "$url"
		;;
	*png|*jpg|*jpe|*jpeg|*gif|*webp)
		curl -sL "$url" > "/tmp/$safe_name"
		nsxiv -a "/tmp/$safe_name"
		;;
	*pdf|*cbz|*cbr)
		curl -sL "$url" > "/tmp/$safe_name"
		zathura "/tmp/$safe_name"
		;;
	*mp3|*flac|*opus|*mp3?source*)
		qndl "$url" 'curl -LO'
		;;
	*)
		if [ -f "$url" ]; then
			${TERMINAL:-x-terminal-emulator} -e ${EDITOR:-vi} "$url"
		else
			${BROWSER:-xdg-open} "$url"
		fi
		;;
esac
exit 0
